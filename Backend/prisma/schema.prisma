generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum NETWORK {
  BNB
  Avalanche
}

enum BridgeStatus {
  Pending
  Completed
  Failed
}

model TransactionData {
  id                 String        @id @default(auto()) @map("_id") @db.ObjectId
  txHash             String        @unique
  sourceNetwork      NETWORK
  destinationNetwork NETWORK
  tokenAddress       String
  amount             String
  sender             String
  receiver           String
  nonce              Int
  isDone             Boolean       @default(false)
  bridgeStatus       BridgeStatus  @default(Pending)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
}

model NetworkStatus {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  network            NETWORK @unique
  lastProcessedBlock Int
  lastCheckedBlock   Int?
  isSyncing          Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model nonce {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  nonce             Int      @default(0)
  network           NETWORK  @unique
}

model tokenInfo {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  tokenAddress      String @unique
  name              String
  symbol            String
  decimals          Int
  network           NETWORK
  createdAt    DateTime @default(now())
}
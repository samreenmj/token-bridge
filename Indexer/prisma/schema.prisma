generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum NETWORK {
  BNB
  Avalanche
}

model TransactionData {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  txHash                String   @unique
  isDone                Boolean  @default(false)
  tokenAddress          String
  amount                String
  sender                String
  network               NETWORK
  nonce                 Int
  createdAT             DateTime @default(now())
  updatedAT             DateTime @updatedAt
}

model NetworkStatus {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  network               NETWORK  @unique
  lastProcessedBlock    Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Nonce {
  id                    String  @id @default(auto()) @map("_id") @db.ObjectId
  nonce                 Int     @default(0)
  network               NETWORK @unique
}

model TokenInfo {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  tokenAddress          String  @unique
  name                  String
  symbol                String
  decimals              Int
  network               NETWORK
  createdAt             DateTime @default(now())
}

model RedeemLog {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  network               NETWORK
  tokenAddress          String
  to                    String
  value                 String
  txHash                String?
  createdAt    DateTime @default(now())
}